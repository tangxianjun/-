<!-- 头部标题 -->
<view style="filter:{{success==true?'blur(2px)':'blur(0px)'}}">
  <view class="title">
    <text>欢迎来到湘大二手街！</text>
    <view class="bg"></view>
    <view class="p">
      <text >全新打造『湘大人自己的跳蚤市场』</text>
    </view> 
  </view>
  <!-- 中间的内容学号密码部分 -->
  <view class="content">
  <view class="username">
    <text class="xue">学号</text>
    <view class="shu"></view>
    <input id="username" placeholder="请填写你的学号" placeholder-class="center" bindinput="in_username"></input>
  </view>
  <view class="passwd">
    <text>密码</text>
    <view class="shu"></view>
    <input id="passwd" password="true" bindinput="in_passwd" placeholder="请填写教务系统密码" ></input>
  </view>
  <view class="agree"> 
    <view class="agree_left">
      <image class="agree_img" src="../images/提示@hdpi.png"></image>
    </view>
    <view class="agree_en">
      <text class="text" >我已经认真阅读《许可使用协议》</text>
      <radio class="radio" bindtap="agree"></radio>
    </view>
  </view>
  <!-- button按钮 -->
  <view class="button">
    <view class="b_button">
      <button class="login" bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo" >登录</button>
    </view>
  </view>
  </view>
</view>
<view class="toast" style="display:{{modalStr != ''?'block':'none'}}">{{modalStr}}</view>
<view class="window" bindtap="closeWindow" style="top:{{success == true?'0':'100%'}}">
  <image src="../images/loginSuccess.png"></image>
</view>
