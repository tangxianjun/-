  float: left;
  padding: 0;
}
/* 搜索框的黄色背景 */
.s_back{
  background-color: #FFE896;
  height: 253rpx;
  width: 100%;
  border-radius: 0 0 40.7rpx 40.7rpx;
}
.search{
  width: 626rpx;
  height: 70rpx;
  padding: 10rpx 62rpx;
}
/* 搜索框 */
.nav_search{
  height: 70rpx;
  background-color: #FFFFFF;
  width: 626rpx;
  border-radius: 33.5px;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #BBBBBB;
}
/* 搜索icon */
.search_icon{
  height: 25rpx;
  width: 25rpx;
  margin-right: 16.1rpx;
